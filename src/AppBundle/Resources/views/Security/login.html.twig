{% set title = 'Login' %}
{% extends "AppBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Login Â· Helpdesk{% endblock %}

{% block content %}
    <div class="jumbotron jumbotron-fluid" style="height: 100vh;">
        <div class="container">
            <h1 class="display-3">Please sign in to continue</h1>
            <hr class="m-y-2">
            <div>
                {% if error %}
                    <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path("auth_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <div class="form-group row">
                        <label for="username" class="col-sm-2 form-control-label">Username</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 form-control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="password" name="_password" required="required" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2"></label>
                        <div class="col-sm-10">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Remember me
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary" id="_submit" name="_submit">Sign in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock content %}